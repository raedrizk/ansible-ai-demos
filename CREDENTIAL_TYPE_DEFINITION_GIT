#INPUT
fields:
  - id: name
    type: string
    label: Name
  - id: email
    type: string
    label: Email
  - id: username
    type: string
    label: Username
  - id: token
    type: string
    label: Token
    secret: true

required:
  - name
  - email
  - username
  - token
  

#INJECTOR
extra_vars:
  git_name: '{{ name }}'
  git_email: '{{ email }}'
  git_username: '{{ username }}'
  git_token: '{{ token }}'

env:
  GIT_AUTHOR_NAME: '{{ name }}'
  GIT_AUTHOR_EMAIL: '{{ email }}'
  GIT_COMMITTER_NAME: '{{ name }}'
  GIT_COMMITTER_EMAIL: '{{ email }}'